<Window x:Class="GitActionRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git Action Runner"
        WindowStyle="None"
        ResizeMode="CanResize"
        BorderThickness="0"
        AllowsTransparency="True"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Background>
        <SolidColorBrush Color="#1A1A2E"/>
    </Window.Background>
    
    <Window.BorderBrush>
        <SolidColorBrush Color="#252547"/>
    </Window.BorderBrush>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 커스텀 제목 바 -->
        <Grid Background="#252547" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 제목 -->
            <TextBlock Text="Git Action Runner"
                      Grid.Column="1"
                      Foreground="White"
                      VerticalAlignment="Center"
                      Margin="8,0,0,0"/>

            <!-- 윈도우 컨트롤 버튼 -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Right">
                <Button Content="−" 
                        Click="MinimizeButton_Click"
                        Style="{StaticResource WindowControlButton}"/>
                <Button Content="□" 
                        Click="MaximizeButton_Click"
                        Style="{StaticResource WindowControlButton}"/>
                <Button Content="×" 
                        Click="CloseButton_Click"
                        Style="{StaticResource WindowControlButton}"/>
            </StackPanel>
        </Grid>

        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundColor}"/>
    </Grid>
</Window>