<Page x:Class="GitActionRunner.Views.GitHubLoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GitActionRunner.Views"
      Background="{StaticResource BackgroundColor}"
      Width="400"
      Height="300">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="GitHub 계정 연동" 
                       Style="{StaticResource PageHeader}"/>
                       
            <Border Background="{StaticResource CardBackgroundColor}"
                    BorderThickness="0" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="#AAB6C2"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>
                    
                    <TextBox Text="{Binding AccessToken, UpdateSourceTrigger=PropertyChanged}"
                             Background="#1d1f3b"
                             Foreground="White"
                             BorderThickness="0"
                             Height="35"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,20"/>
                            
                    <Button Content="토큰으로 로그인"
                            Command="{Binding LoginWithTokenCommand}"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>