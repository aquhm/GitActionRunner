<Application x:Class="src.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:src"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- 텍스트박스 스타일 -->
            <Style x:Key="DefaultTextBox" TargetType="TextBox">
                <Setter Property="Padding" Value="10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#DDDDDD"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Height" Value="40"/>
            </Style>

            <!-- 리스트뷰 스타일 -->
            <Style x:Key="RepositoryList" TargetType="ListView">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            </Style>

            <!-- 카드 보더 스타일 -->
            <Style x:Key="CardBorder" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="10" 
                                        ShadowDepth="1" 
                                        Opacity="0.1"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 텍스트 스타일 -->
            <Style x:Key="RepositoryTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style x:Key="RepositoryDescription" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <!-- 버튼 스타일 -->
            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Background" Value="#0366D6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0255BC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#024494"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 헤더 스타일 -->
            <Style x:Key="PageHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,0,0,20"/>
            </Style>

            <!-- 페이지 배경 스타일 -->
            <Style x:Key="PageBackground" TargetType="Grid">
                <Setter Property="Background" Value="#F8F9FA"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>